
@{
    ViewBag.Title = "Salvar Cliente";
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<h2>Salvar Cliente</h2>

<div class="row">
    <div class="col-md-12">
        <div class="form-group">
            <label>Nome</label>
            <input type="text" id="nome" class="form-control" />
        </div>
        <div class="form-group">
            <label>Telefone</label>
            <input type="text" id="fone" class="form-control" />
        </div>
        <div class="form-group">
            <label>CPF</label>
            <input type="text" id="cpf" class="form-control" />
        </div>
    </div>
    <input type="hidden" id="id" value="@ViewBag.Id"/>
</div>
<button type="button" class="btn btn-primary" onclick="Salvar();">Salvar</button>
<script>
    $(document).ready(function () {
        ObterDados($('#id').val());
    });

    function ObterDados(id) {
        $.ajax({
            url: "https://localhost:44397/api/cliente/obter1?id="+id,
            method: "GET",
            success: function (dataRetorno) {

                $('#nome').val(dataRetorno.nome);
                $('#cpf').val(dataRetorno.cpf);
                $('#fone').val(dataRetorno.fone);
            }
        });
    }

    function Salvar() {
        var dataForm = {
            "nome": $('#nome').val(),
            "fone": $('#fone').val(),
            "datanasc": "2000-01-01T00:00:00",
            "endereco": "AV",
            "bairro": "AV",
            "cep": "69041400",
            "referencia": "PRO",
            "email": "OUT",
            "cpf": $('#CPF').val(),
            "id": $('#id').val()
        };
        $.ajax({
            url: "https://localhost:44397/api/cliente/salvar",
            data: JSON.stringify(dataForm),
            method: "POST",
            contentType: "application/json; charset=utf-8",
            success: function (dataRetorno) {
                alert(dataRetorno);
                var url = "@Url.Action("Cliente")";
                location.href = url;
            }
        });
    }
</script>

